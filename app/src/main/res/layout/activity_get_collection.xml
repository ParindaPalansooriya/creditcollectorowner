<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modifica.creditcollectorapp.getCollection">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_01"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/textView_collact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/collect"
            android:textColor="@color/font"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:contentDescription="@string/LD"
            app:srcCompat="@mipmap/refresh" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/kotubutton3" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:ems="18"
                android:hint="@string/Loan_num"
                android:inputType="textPersonName"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/editTextNIK_NAME"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@+id/editText11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:gravity="fill"
                android:ems="18"
                android:hint="@string/nikname"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:contentDescription="@string/LD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextNIK_NAME"
                android:layout_alignStart="@+id/editTextNIK_NAME"
                android:layout_below="@+id/editTextNIK_NAME"
                android:layout_marginTop="15dp"
                app:srcCompat="@mipmap/ic_launcher_kk" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignTop="@+id/imageView5"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:text="@string/APT" />

            <TextView
                android:id="@+id/textView_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView25"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_toStartOf="@+id/textView5"
                android:ems="10"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_term"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="@string/terms"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextNIK_NAME"
                android:layout_alignStart="@+id/editTextNIK_NAME"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="21dp"
                android:text="@string/full"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:text="@string/payed"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignEnd="@+id/editTextNIK_NAME"
                android:layout_alignRight="@+id/editTextNIK_NAME"
                android:text="@string/available"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:hint="@string/full"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_paied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_alignTop="@+id/textView_full"
                android:gravity="center"
                android:hint="@string/payed"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignTop="@+id/textView_paied"
                android:gravity="center"
                android:hint="@string/available"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView25"
                android:layout_alignStart="@+id/textView25"
                android:layout_below="@+id/textView_paied"
                android:layout_marginTop="28dp"
                android:text="@string/payment"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textView18"
                android:layout_centerHorizontal="true"
                android:ems="8"
                android:inputType="number"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="55dp"
                android:text="@string/LC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText16"
                android:layout_alignStart="@+id/editText16"
                android:layout_below="@+id/textView21"
                android:hint="@string/LC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView21"
                android:layout_alignStart="@+id/textView21"
                android:layout_below="@+id/textView21"
                android:layout_marginTop="40dp"
                android:text="@string/DT"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView22"
                android:layout_alignStart="@+id/textView22"
                android:layout_below="@+id/textView23"
                android:hint="@string/DT"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@+id/textView24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/rcbutton"
                android:ems="18"
                android:text="@string/collect"
                android:textColor="@color/font"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:textAllCaps="false"
                android:layout_marginBottom="50dp"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView56"
                android:contentDescription="@string/LD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView57"
                android:layout_alignStart="@+id/imageView57"
                android:layout_alignTop="@+id/textView21"
                app:srcCompat="@mipmap/location_pik" />

            <ImageView
                android:id="@+id/imageView57"
                android:contentDescription="@string/LD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_full"
                android:layout_alignStart="@+id/textView_full"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginTop="4dp"
                app:srcCompat="@mipmap/ic_launcher_kk" />

            <ImageView
                android:id="@+id/imageView58"
                android:contentDescription="@string/LD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView56"
                android:layout_alignStart="@+id/imageView56"
                android:layout_alignTop="@+id/textView23"
                app:srcCompat="@mipmap/date_pik" />

            <ImageView
                android:id="@+id/imageView6_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView_available"
                android:layout_alignRight="@+id/textView_available"
                android:layout_alignTop="@+id/editText16"
                android:contentDescription="@string/LD" />

            <ImageView
                android:id="@+id/imageView6_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView_term"
                android:layout_alignEnd="@+id/editTextNIK_NAME"
                android:layout_alignRight="@+id/editTextNIK_NAME"
                android:contentDescription="@string/LD"/>

            <ImageView
                android:id="@+id/imageView6_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView24"
                android:layout_alignEnd="@+id/button6"
                android:layout_alignRight="@+id/button6"
                android:contentDescription="@string/LD"/>

            <ImageView
                android:id="@+id/imageView6_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView22"
                android:layout_alignEnd="@+id/button6"
                android:layout_alignRight="@+id/button6"
                android:contentDescription="@string/LD"/>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
