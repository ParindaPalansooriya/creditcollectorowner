<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/list_view">


    <TextView
        android:id="@+id/textView_NN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="21sp"
        android:textColor="@color/bt_color1"
        android:layout_marginTop="3dp"
        android:text="@string/LD" />

    <TextView
        android:id="@+id/textView_LN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_NN"
        android:layout_alignStart="@+id/textView_NN"
        android:layout_below="@+id/textView_NN"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/LD"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_LN"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:text="@string/LD" />

    <TextView
        android:id="@+id/textView_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView_due"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="17sp"
        android:textColor="@color/font"
        android:text="@string/LD" />

    </RelativeLayout>

</LinearLayout>